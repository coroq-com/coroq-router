{
    "name": "coroq/router",
    "description": "A minimal PHP router for mapping request paths to class names",
    "type": "library",
    "license": "MIT",
    "keywords": ["router", "routing", "middleware", "psr-15"],
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Coroq\\Router\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ozawa Masayuki",
            "email": "ozawa@coroq.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit test/",
        "coverage": "@php vendor/bin/phpunit test/ --coverage-html coverage",
        "coverage-text": "@php vendor/bin/phpunit test/ --coverage-text"
    }
}
